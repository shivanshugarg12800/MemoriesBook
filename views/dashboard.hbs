<h6>Dashbboard</h6>
<h3>Welcome {{name}}</h3>

<h4>Here are your Stories</h4>

{{#if stories}}
    <table class="stripped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a href="/stories/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a>
                        <form action="/stories/{{_id}}" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red"><i class="fas fa-trash"></i></button>
                        </form>
                    </td>
                   
                </tr>

            {{/each}}
        </tbody>
    </table>


{{else}}
<p>You have not created any stories as of now</p>

{{/if}}